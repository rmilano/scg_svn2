body
{
    /*    max-width: 800px;*/
    font-family: Times New Roman;
    font-size: 12px;
    background-color: #DADADA;
    color:#515151;
    margin:0;
}
div.principal
{
    margin-left:11%;
    margin-right:auto;
    margin-top:1em;
    position:relative;
    width:956px;
    display: block;
    background-color:white;
    padding:1em;
}

div.encabezado
{
    background-image:url("../../imagenes/SE.jpg");
    height:80px;
    line-height:1.9;
}
div.encabezado .sesionLegen
{
    float:right;
    margin-top:47px;
    text-align:right;
}
div.menu
{
    height:51px;
    line-height:1.9;
}
div.cuerpo
{
    background: #FFFFFF;    
    width: 100%;
    height: 100%;
    display: inline-block;    
}

div.cuerpo .titulo
{
  
   color: #ba2025;
   font-size: 11px;
   font-family: Trajan Pro;
    line-height:18px;
}

div.titulo label.pagina/*Indica la página en la que está el usuario*/
{
    color: #ba2025;
    font-family: Trajan Pro;
    font-size: 12px;
    left: 1.5em;
    position: absolute;
    margin-top: -4px;
}

div.titulo label.usuario
{
    position: absolute;
    right: 1.5em;
    font-family: Trajan Pro;
    font-size: 12px;
    color: #646463;
    margin-top: -4px;
}

div.titulo label.usuario span.cerrarSesion
{
    text-align: left;
    font-family: Trajan Pro;
    font-size: 12px;
    color: #646463;
}

div.pie
{
    height:80px;
    line-height:1.9;
}
div.pieDePagina
{
    background-color: white;
    display: table;
    margin-left: -12px;
    margin-top: 0px;
    text-align: center;
    width: 980px;
}
div.border
{
    background:none repeat scroll 0 0 #DADADA;
    margin:15px;
    padding:1px;
}
div.inner
{
    background:none repeat scroll 0 0 #FFFFFF;
    margin:0;
    padding:1px;
}


/* Configuracion de los divs*/
div.content .left
{
    text-align: left;

}

div.content  label
{
    display: block;
}

div.content .contentform table
{
    width: 98%;
}

div.content .contentform table .right
{
    text-align: right;
}
div.content .contentform
{
    text-align: left;
}
div.content .contentform  .textArea
{
    width: 100%;
}


div.content .contentform .hasDatepicker
{
    width: 100px;
}

div.content div.inner div.contentform
{
    padding: 5px 10px;
}
div.content div.inner div.ayuda
{
    background:none repeat scroll 0 0 #DADADA;
    float:right;
    height:auto;
    /*margin: 200% 20% 20% 10%;*/
    margin:-235px 18px 2px 1px;
    position:relative;
    width:24%;
    text-align: justify;
    font-size: 10.5px;
    border-style: dashed;
    border-width: 2px;
}
div.content div.inner div.ayuda span.ayudaTexto
{
    color: #515151;
    font-family:Times New Roman;
    font-size: 12px;
    font-weight: bold;
    text-align: justify;
}
.imgayuda
{
    width: 25px;
    height: 25px;
    /*position: absolute;*/
    margin-top: 10%;
    margin-left: 15%;
    margin-right: 40%;

}
.exitoMsg
{
    color: #1b6a3f;
}	


